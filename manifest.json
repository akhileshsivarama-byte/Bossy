{
  "manifest_version": 3,
  "name": "WhatsApp Chat Notes",
  "version": "0.1",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "WhatsApp Chat Notes"
  }
}